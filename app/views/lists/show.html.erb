<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@list.image_url%>)">
  <div class="container">
    <h1><strong><%= @list.name %></strong></h1>
  </div>
</div>
<div class="banner">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url%>)">
        <h2><%= bookmark.movie.title %></h2>
      </div>
    <% end %>
  </div>
</div>

<br>
<div class="banner">
  <h2>Create a New Bookmark</h2>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie, as: :select, collection: @movies, prompt: 'Select movie', label: false %>
    <%= f.input :comment, input_html: { class: "form-control", minlength: 6 }%>
    <%= f.submit "Submit", class: 'btn btn-primary'%>
  <% end %>
</div>
